# Polymarket API Configuration
POLYMARKET_PRIVATE_KEY=your_polygon_private_key_here
POLYMARKET_API_KEY=your_api_key_if_required
POLYGON_RPC_URL=https://polygon-rpc.com

# Database
DATABASE_URL=sqlite+aiosqlite:///./arbitrage.db

# Arbitrage Thresholds
# For paper trading validation, use more relaxed thresholds:
# MIN_GROSS_EDGE=0.005 (0.5% edge - more realistic for finding opportunities)
# MIN_NET_PROFIT=0.05 ($0.05 min profit)
# MIN_APY=25 (25% APY threshold)
# MAX_DAYS_TO_RESOLUTION=7 (focus on near-term markets)
MIN_GROSS_EDGE=0.01
MIN_NET_PROFIT=0.10
MIN_LIQUIDITY=10.0
MAX_DAYS_TO_RESOLUTION=14
MIN_APY=50

# Risk Management Limits
MAX_TRADE_SIZE=15.0
MAX_DAILY_LOSS=10.0
MAX_OPEN_EXPOSURE=50.0

# Execution Settings
ORDER_TIMEOUT_SECONDS=5
PARTIAL_FILL_UNWIND=true

# Operation Modes
TRADING_MODE=paper
# For paper trading validation, use faster polling:
# POLL_INTERVAL_SECONDS=2 (scan every 2 seconds)
POLL_INTERVAL_SECONDS=3
LOG_LEVEL=INFO

# Email Notifications (Phase 2)
ENABLE_NOTIFICATIONS=false
SENDGRID_API_KEY=your_sendgrid_api_key_here
NOTIFICATION_EMAIL_FROM=bot@yourdomain.com
NOTIFICATION_EMAIL_TO=your@email.com

# SMS Notifications (free via carrier email gateway)
SMS_ENABLED=false
SMS_PHONE_NUMBER=6475173009
SMS_CARRIER=rogers

# Discord Notifications (100% FREE - RECOMMENDED!)
# Get your webhook URL: Discord Server → Edit Channel → Integrations → Webhooks → New Webhook
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=

# Copy Trading Settings (Phase 2)
COPY_TRADING_ENABLED=false
COPY_WHALE_ADDRESSES=
COPY_RATIO=0.01
MAX_COPY_SIZE=50
MIN_WHALE_ACCURACY=65

# Gas Settings
MAX_GAS_PRICE_GWEI=50
ESTIMATED_GAS_COST_USD=0.01

